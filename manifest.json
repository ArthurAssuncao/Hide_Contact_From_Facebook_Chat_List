{
  "name": "__MSG_name__",
  "description": "__MSG_description__",
  "version": "0.1.0",
  "permissions": [
    "https://*.facebook.com/",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*"],
      "run_at": "document_start",
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "manifest_version": 2,
  "default_locale": "en"
}
